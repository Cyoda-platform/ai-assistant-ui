{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "packages/web/src/**/*",
    "packages/web/src/**/*.vue"
  ],
  "exclude": [
    "packages/web/src/**/__tests__/*"
  ],
  "compilerOptions": {
    "strictNullChecks": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
